{
  "name": "@project-serum/anchor",
  "version": "0.21.0",
  "description": "Anchor client",
  "homepage": "https://github.com/project-serum/anchor#readme",
  "bugs": {
    "url": "https://github.com/project-serum/anchor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/project-serum/anchor.git"
  },
  "license": "(MIT OR Apache-2.0)",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "browser": "./dist/browser/index.js",
  "types": "dist/cjs/index.d.ts",
  "scripts": {
    "build": "rimraf dist/ && yarn build:node && yarn build:browser",
    "build:browser": "rollup --config",
    "build:node": "tsc && tsc -p tsconfig.cjs.json",
    "docs": "typedoc --excludePrivate --includeVersion --out ../docs/src/.vuepress/dist/ts/ --readme none src/index.ts",
    "lint": "prettier src/** tests/**/*.ts --check",
    "lint:fix": "prettier src/** tests/**/*.ts -w",
    "prepublishOnly": "yarn build",
    "test": "jest tests --detectOpenHandles",
    "test:live": "TEST_LIVE=1 yarn test",
    "test:live-with-test-validator": "start-server-and-test 'solana-test-validator --reset --quiet' http://127.0.0.1:8899/health test:live",
    "watch": "tsc -p tsconfig.cjs.json --watch"
  },
  "dependencies": {
    "@project-serum/borsh": "^0.2.5",
    "@solana/buffer-layout": "^3.0.0",
    "@solana/web3.js": "^1.17.0",
    "base64-js": "^1.5.1",
    "bn.js": "^5.1.2",
    "bs58": "^4.0.1",
    "buffer-layout": "^1.2.2",
    "camelcase": "^5.3.1",
    "cross-fetch": "^3.1.5",
    "crypto-hash": "^1.3.0",
    "eventemitter3": "^4.0.7",
    "find": "^0.3.0",
    "js-sha256": "^0.9.0",
    "pako": "^2.0.3",
    "snake-case": "^3.0.4",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/bn.js": "^4.11.6",
    "@types/bs58": "^4.0.1",
    "@types/crypto-hash": "^1.1.2",
    "@types/jest": "^27.0.3",
    "@types/pako": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "jest": "27.3.1",
    "jest-config": "27.3.1",
    "lint-staged": "^10.5.0",
    "mockttp": "^2.0.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.2",
    "rollup-plugin-terser": "^7.0.2",
    "start-server-and-test": "^1.12.0",
    "ts-jest": "^27.0.7",
    "ts-jest-resolver": "^2.0.0",
    "ts-node": "^9.0.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=11"
  },
  "publishConfig": {
    "access": "public"
  }
}
